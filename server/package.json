{
  "name": "bitcoin-china-community-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && npm run copy:assets",
    "copy:assets": "copyfiles -u 1 \"prisma/**/*\" \"src/**/*.graphql\" \"src/**/*.json\" \"src/**/*.prisma\" \"src/prisma/**/*\" dist/src",
    "postbuild": "node scripts/copy-prisma.js",
    "build:prod": "cross-env NODE_ENV=production tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/src/index.js",
    "prisma:generate": "prisma generate",
    "prisma:generate:prod": "cross-env NODE_ENV=production prisma generate",
    "db:push": "prisma db push",
    "db:push:prod": "cross-env NODE_ENV=production prisma db push",
    "db:seed": "prisma db seed",
    "db:seed:prod": "cross-env NODE_ENV=production prisma db seed",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "cross-env NODE_ENV=production prisma migrate deploy",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@types/morgan": "^1.9.10",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.7.5",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "prisma": "^5.20.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}